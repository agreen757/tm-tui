#!/bin/bash

# Script to store memory logs for the word wrap implementation
command=$1
shift

case $command in
  tui-wordwrap)
    message="$@"
    mkdir -p ./.taskmaster/memory
    echo "$message" > ./.taskmaster/memory/tui-wordwrap.md
    echo "Memory saved to ./.taskmaster/memory/tui-wordwrap.md"
    ;;
  *)
    echo "Unknown command: $command"
    echo "Available commands: tui-wordwrap"
    exit 1
    ;;
esac